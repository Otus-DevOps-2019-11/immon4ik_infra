{
    "variables": {
           "machine_type_var": "f1-micro",
           "project_id_var": "silken-period-262510",
           "source_image_family_var": "ubuntu-1604-lts",
           "image_family_var": "reddit-full"
       },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id_var`}}",
            "image_name": "reddit-full-{{timestamp}}",
            "image_description": "img for hw packer",
            "disk_size": "10",
            "disk_type": "pd-standard",
            "image_family": "{{user `image_family_var`}}",
            "source_image_family": "{{user `source_image_family_var`}}",
            "zone": "europe-west1-b",
            "ssh_username": "immon4ik",
            "tags": "ss-puma-server",
            "network": "default",
            "machine_type": "{{user `machine_type_var`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_ruby.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "shell",
            "script": "scripts/deploy.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "file",
            "source": "files/hw5.service",
            "destination": "/tmp/hw5.service"
        },
        {
            "type": "shell",
            "script": "scripts/hw5.sh",
            "execute_command": "sudo {{.Path}}"
        }
    ]
}
